<Window x:Class="observatory.windows.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        Title="Отчёт" Height="500" Width="700">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <TextBlock Text="Описание отчета" FontWeight="Bold" FontSize="16" Margin="10" />
            <TextBlock Name="ReportDescription" TextWrapping="Wrap" FontSize="14" Margin="10" />
            <TextBlock Text="Вложение:" FontWeight="Bold" FontSize="14" Margin="10,20,10,5" />
            <TextBlock Name="ReportAttachment" TextWrapping="Wrap" FontSize="14" Margin="10" />
            <TextBlock Text="Дата загрузки:" FontWeight="Bold" FontSize="14" Margin="10,20,10,5" />
            <TextBlock Name="UploadedDate" TextWrapping="Wrap" FontSize="14" Margin="10" />
        </StackPanel>
    </ScrollViewer>
</Window>